options {
        directory "/var/cache/bind";
        allow-query     { 127.0.0.1; 192.168.200.0/24; 172.17.0.0/24; };
        allow-recursion { 127.0.0.1; 192.168.200.0/24; 172.17.0.0/24; };

        dnssec-validation no; 

        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { any; };
};

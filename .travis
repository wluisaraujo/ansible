  - playbook: deployments-rolling.yml
    distro: ubuntu1804

  - playbook: docker.yml
    distro: ubuntu1604
    test_idempotence: false

  - playbook: docker-hubot.yml
    distro: ubuntu1604
    test_idempotence: false

  - playbook: drupal.yml
    distro: ubuntu1604

  # TODO: Not easy to test in CI at this time.
  # - playbook: dynamic-inventory.yml
